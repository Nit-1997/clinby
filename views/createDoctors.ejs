<section class="bbc">
 <% if(error && error.length>0){%> 
             <div class="container">
                  <div class="alert alert-danger" role="alert">
                      <%=error%>
                  </div> 
             </div>
    <% }%>
     <% if(success && success.length>0){%>
             <div class="container">
                  <div class="alert alert-success" role="alert">
                      <%=success%>
                  </div> 
             </div>
    <% }%>        
 <div class="row">
  <div class="col-sm-6 col-xs-12 center-col ht900 lp">
   <div class="row lg">
    <h1>Add Doctor</h1>
    <form action="/registerDoctor" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Full Name</label>
          <input type="text" class="form-control" name="fullName" id="fullName" aria-describedby="fullName" placeholder="Enter doctor's full name">
        </div>
        <div class="form-group">
          <label for="special">Speciality</label>
          <input type="text" class="form-control" id="special" aria-describedby="special" name="special" placeholder="write about the Speciality">
        </div>

         <div class="form-group">
          <label for="address">Location of the clinic</label>
          <input type="address" class="form-control" id="address" aria-describedby="address" name="address" placeholder="Enter the pub Address">
        </div>
        
        <div class="form-group">
                 <label for="experience">Experience in years</label>
                 <input class="form-control" type="number" name="experience" placeholder="Experience" min="0" step="1">
        </div>

        <div class="form-group">
                 <label for="experience">Consultation Charges in Rs</label>
                 <input class="form-control" type="number" name="consultation" placeholder="Consultation Charges" min="100" step="1">
        </div>

        <div class="form-group">
                 <label for="experience">Ratings</label>
                 <input class="form-control" type="number" name="rating" placeholder="rating" min="0" max="5" step="1">
        </div>

  
        <div class="form-group">
                    <label for="image">Upload doctor's image</label>
                    <input class="form-control" type="file" id="image" name="image" accept="image/*" required>
        </div>

      <button type="submit" class="btn btn-primary">Submit</button>
   </form>
 </div>
</div>
<div class="col-sm-6 col-xs-12 center-col ht900 lt"></div>    
</div>       
</section>


